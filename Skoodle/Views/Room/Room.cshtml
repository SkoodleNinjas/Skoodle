@model Skoodle.ViewModels.RoomViewModel

<div>
    <h1 class="text-center">@Model.Name</h1>
    <div class="col-sm-3">
        <h2>Chat:</h2>
    </div>
    
    <div class="col-sm-6">
        <div id="wPaint" style="position:relative; width:100%; height:300px; background-color:#ffffff;">
        </div>
        <button id="grayScale">Gray scale!</button>
        <button id="blur">Blur!</button>
        <button id="negative">Negative!</button>
    </div>
    <div class="col-sm-3">
        @foreach (var username in Model.CurrentUserNames)
        {
            <p> <span class="glyphicon glyphicon-user"></span> @username</p>
        }
    </div>
    @Html.ActionLink("Leave room", "LeaveRoom", "Room", new { roomId = Model.RoomId }, new { @class = "btn btn-info" })
</div>

@Scripts.Render("~/bundles/wPaint")
