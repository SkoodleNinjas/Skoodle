@model Skoodle.ViewModels.RoomViewModel

<div>
    <h1 class="text-center bottom-margin">@Model.Name</h1>
    <div class="col-sm-2">
        <h2>Chat:</h2>
    </div>

    <div class="col-sm-8">
        <div id="wPaint" style="position:relative; width:100%; height:300px; background-color:#ffffff; border:1px solid #000000;">
        </div>
        <div class="btn-group btn-group-justified" role="group">
                <div class="btn-group" role="group">
                        <button id="grayScale" type="button" class="btn btn-default">Gray scale!</button>
                    </div>
                <div class="btn-group" role="group">
                        <button id="blur" type="button" class="btn btn-default">Blur!</button>
                    </div>
                <div class="btn-group" role="group">
                      <button id="negative" type="button" class="btn btn-default">Negative!</button>
                    </div>
            </div>
        </div>
    <div class="col-sm-2">
        @foreach (var username in Model.CurrentUserNames)
        {
            <p> <span class="glyphicon glyphicon-user"></span> @username</p>
        }
    </div>
    @Html.ActionLink("Leave room", "LeaveRoom", "Room", new { roomId = Model.RoomId }, new { @class = "btn btn-info" })
</div>

@Scripts.Render("~/bundles/wPaint")
